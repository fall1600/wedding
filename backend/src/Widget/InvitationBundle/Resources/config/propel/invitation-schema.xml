<?xml version="1.0" encoding="UTF-8"?>
<database defaultIdMethod="native" name="default" namespace="Widget\InvitationBundle\Model">
    <table name="invitation">
        <column name="id" type="bigint" required="true" primaryKey="true" />
        <!-- 全名 -->
        <column name="name" type="varchar" required="true" />
        <!-- 別名 -->
        <column name="nickname" type="varchar" />
        <!-- 聯絡電話 -->
        <column name="phone" type="varchar" required="true" />
        <!-- 人數(含自己) -->
        <column name="number_of_people" type="integer" required="true" default="1" />
        <!-- 喜帖形式: 實體喜帖, 有填就寄 -->
        <column name="address" type="varchar" />
        <!-- 喜帖形式: 電子喜帖, 有填就寄 -->
        <column name="email" type="varchar" />
        <!-- 出席意願: 0 for 不出席, 1 for 出席, 2 for 禮到人未到 -->
        <column name="attend" type="enum" valueSet="no, yes, congrats" />
        <!-- 男方或女方的親友 -->
        <column name="known_from" type="enum" valueSet="male, female"/>
        <!-- 是否素食 -->
        <column name="is_vegetarian" type="boolean" default="false" />
        <!-- 兒童座椅 -->
        <column name="baby_seat" type="integer" default="0" />
        <!-- 祝福的話 -->
        <column name="note" type="longvarchar" />

        <behavior name="addrandompk" />
        <behavior name="timestampable" />
    </table>
</database>
